<h1>Edit Paper</h1>

<% if @paper.errors.any? %>
	<% papers.errors.full_messages.each do |message| %>
		<%= message %>
	<% end %>
<% end %>

<%= form_for @paper do |f| %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :venue %><br>
		<%= f.text_field :venue %>
	</p>
	<p>
		<%= f.label :year %><br>
		<%= f.number_field :year %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>

<%= link_to("Back", papers_path) %>