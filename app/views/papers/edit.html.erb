<h1>Edit Paper</h1>

<% if @paper.errors.any? %>
	<% papers.errors.full_messages.each do |message| %>
		<%= message %>
	<% end %>
<% end %>

<%= form_for @paper do |f| %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :venue %><br>
		<%= f.text_field :venue %>
	</p>
	<p>
		<%= f.label :year %><br>
		<%= f.number_field :year %>
	</p>
	<p>
		<%= f.label "Author 1", for: :paper_author_1 %>
		<%= f.collection_select :author_ids, Author.all, :id, :name, {selected: @paper.author_ids[1], include_blank: 'none'}, {name: "paper[author_ids][]", id: "paper_author_1"} %>
	</p>
	<p>
		<%= f.label "Author 2", for: :paper_author_2 %>
		<%= f.collection_select :author_ids, Author.all, :id, :name, {selected: @paper.author_ids[2], include_blank: 'none'}, {name: "paper[author_ids][]", id: "paper_author_2"} %>
	</p>
	<p>
		<%= f.label "Author 3", for: :paper_author_3 %>
		<%= f.collection_select :author_ids, Author.all, :id, :name, {selected: @paper.author_ids[3], include_blank: 'none'}, {name: "paper[author_ids][]", id: "paper_author_3"} %>
	</p>
	<p>
		<%= f.label "Author 4", for: :paper_author_4 %>
		<%= f.collection_select :author_ids, Author.all, :id, :name, {selected: @paper.author_ids[4], include_blank: 'none'}, {name: "paper[author_ids][]", id: "paper_author_4"} %>
	</p>
	<p>
		<%= f.label "Author 5", for: :paper_author_5 %>
		<%= f.collection_select :author_ids, Author.all, :id, :name, {selected: @paper.author_ids[5], include_blank: 'none'}, {name: "paper[author_ids][]", id: "paper_author_5"} %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>

<%= link_to("Back", papers_path) %>