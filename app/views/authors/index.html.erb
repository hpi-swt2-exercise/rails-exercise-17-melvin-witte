<h1>Author index</h1>
<table>
	<tr>
		<th>ID</th>
		<th>Name</th>
		<th>Homepage</th>
		<th>Author's Details</th>
		<th>Edit Author's Details</th>
	</tr>
	<% @authors.each do |author| %>
		<tr>
			<td id='id'><%= author.id %></td>
			<td id='name'><%= author.name %></td>
			<td id='homepage'><%= author.homepage %></td>
			<td id='author_details'><%= link_to("Show", author_path(author)) %>
			<td id='edit_author_details'><%= link_to("Edit", edit_author_path(author)) %>
		</tr>
	<% end %>
</table>
<%= link_to("Add author", new_author_path) %>